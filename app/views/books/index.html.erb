<h1>Books</h1>

<div>
  <%= flash[:notice] %>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", "/books/#{book.id}" %></td>
      <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?"%></td>
    </tr>
  <% end %>
</table>

<h1>New book</h1>
<% if @book.errors.any? %>
  error!
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>
